/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
class Solution {
    public void deleteNode(ListNode node) {
        node.val=node.next.val;       // like node.data (current value) updated with next node value
        node.next=node.next.next;     // with the current node value updated, next is updated to next.next
    }
}
